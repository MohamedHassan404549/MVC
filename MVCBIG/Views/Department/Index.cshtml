<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f9f9f9;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .custom-table {
            background-color: #ffffff;
            border: 1px solid #ccc;
            width: 100%;
            margin-top: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-new {
            display: block;
            margin: 10px auto;
            text-align: center;
        }

        .btn-animate {
            transition: transform 0.2s;
        }

            .btn-animate:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Department Management</h1>
        <a href="New" class="btn btn-outline-success btn-new">New Department</a>
        <table class="table table-bordered custom-table">
            <thead>
                <tr>
                    <th>DNUMBER</th>
                    <th>DNAME</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Replace this with your loop for data rendering -->
                @foreach (Department item in Model)
                {
                    <tr>
                        <td>@item.Dnumber</td>
                        <td>@item.DName</td>
                        <td>
                            <a href="/Department/GetById/@item.Dnumber" class="btn btn-outline-info btn-animate">Details</a>
                            <a href="/Department/Update/@item.Dnumber" class="btn btn-outline-secondary btn-animate">Edit</a>
                            <a href="/Department/Delete/@item.Dnumber" class="btn btn-outline-danger btn-animate">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Optional: Include Bootstrap JS if needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
