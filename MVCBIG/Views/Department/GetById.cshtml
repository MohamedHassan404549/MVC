@model Department

<h1 style="color: #1a73e8; text-align: center;">Department Details - @Model.DName</h1>

<style>
    .custom-table {
        background-color: #f9f9f9;
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        border: 1px solid #cc5f16;
    }

        .custom-table th, .custom-table td {
            padding: 10px;
            border: 1px solid #cc5f16;
        }

        .custom-table th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-align: left;
        }

        .custom-table td {
            text-align: left;
        }

    .back-link {
        display: block;
        margin-top: 20px;
        text-align: center;
        font-size: 16px;
        color: #1a73e8;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<table class="table table-bordered custom-table">
    <thead>
        <tr>
            <th>Department Number</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Dnumber</td>
            <td>@Model.DName</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Back to Department List", "Index", "Department", null, new { @class = "back-link" })
