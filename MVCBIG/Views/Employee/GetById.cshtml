@model Employee

<h1 style="color: #1a73e8; text-align: center;">Employee Details - @Model.FullName</h1>

<style>
    .custom-table {
        background-color: #f9f9f9;
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        border: 1px solid #23253b;
    }

        .custom-table th, .custom-table td {
            padding: 10px;
            border: 1px solid #23253b;
        }

        .custom-table th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-align: left;
        }

        .custom-table td {
            text-align: left;
        }

    .back-link {
        display: block;
        margin-top: 20px;
        text-align: center;
        font-size: 16px;
        color: #1a73e8;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<table class="table table-bordered custom-table">
    <tbody>
        <tr>
            <th>Employee ID:</th>
            <td>@Model.SSN</td>
        </tr>
        <tr>
            <th>Full Name:</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Date of Birth:</th>
            <td>@Model.Date</td>
        </tr>
        <tr>
            <th>Address:</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Salary:</th>
            <td>@Model.Salary</td>
        </tr>
        <tr>
            <th>Supervisor:</th>
            <td>@Model.SSN</td>
        </tr>
        <tr>
            <th>Department Number:</th>
            <td>@Model.Dnumber</td>
        </tr>
    </tbody>
</table>

<a href="/Employee/Index" class="back-link">Back to Employee List</a>
