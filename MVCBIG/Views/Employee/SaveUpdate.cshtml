@model Employee

<h2>Edit Employee</h2>

<form asp-action="SaveUpdate">
    <input type="hidden" asp-for="SSN" />
    <div class="form-group">
        <label asp-for="FullName">Name:</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary">Salary:</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Supervisor">Supervisor:</label>
        <input asp-for="Supervisor" class="form-control" />
        <span asp-validation-for="Supervisor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dnumber">Dnumber:</label>
        <input asp-for="Dnumber" class="form-control" />
        <span asp-validation-for="Dnumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

